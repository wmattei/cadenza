{
  "name": "@cadenza/compiler",
  "version": "0.1.0",
  "main": "dist/lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "node --require tsx --test ./test/**/*.test.ts",
    "test:watch": "node --require tsx --test --watch --test-only ./test/**/*.test.ts"
  },
  "packageManager": "yarn@3.5.1",
  "dependencies": {
    "@cadenza/core": "workspace:^"
  }
}
